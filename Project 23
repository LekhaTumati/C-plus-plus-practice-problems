#include <iostream>

using namespace std;

int main()
{
    int a, b, c, d;
    cout << "Enter four numbers for the array\n";
    cin >> a >> b >> c >> d;
    if(a > b && a > c && a >> d)
    {
        cout << a << " is the greatest number\n";
    }
    else if(b > a && b > c && b > d)
    {
        cout << b << " is the greatest\n";
    }
    else if(c > b && c > a && c > d)
    {
        cout << c << " is the greatest number\n";
    }
    else if(d > b && d > c && d > a)
    {
        cout << d << " is the greatest number\n";
    }

}
